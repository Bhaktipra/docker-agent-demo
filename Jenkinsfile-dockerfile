pipeline{
    agent {
        dockerfile {
            dir '.'
            filename 'Dockerfile-agent'
            label 'ssh'
        }
    }
    stages{
        stage('Checkout'){
            steps{
                checkout poll: false, scm: scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/vcjain/docker-agent-demo.git']])
            }
        }
        stage('Build'){
            steps{
                echo "Build Stage is in progress "
                sh 'mvn compile'
            }
        }
    }

}
